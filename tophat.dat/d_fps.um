import ("th.um")

var (
        record: [60]real
        recordP: int
        fps: real
)

fn avgFps() {
        fps = 0
        for i in record {
                fps += i
        }
        fps /= 60
}

fn update*() {
        record[recordP] = 1000.0/th.delta
        recordP++
        if recordP >= 60 {
                recordP = 0
        }
        avgFps()
}

fn getFps*(): real {
        return fps
}
