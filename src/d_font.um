import (
  "th.um"
  "font.um"
  "rect.um"
)

type (
  Font* = struct {
    /*
    handle: th.uu
    cache: map[uint32]image.Image
    size: th.fu
    height: th.fu
    */
    f: font.Font
  }
)

fn loadFont*(path: str, size: th.fu): Font {
  return Font{font.load(path, size)}
}

fn (f: ^Font) measure*(text: str): th.Vf2 {
  return f.f.measure(text)
}

fn (f: ^Font) draw*(text: str, pos: th.Vf2, color: uint32) {
  f.f.draw(text, pos, color)
}
