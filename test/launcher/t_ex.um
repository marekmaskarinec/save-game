import ("std.um")

fn load*(p: str): str {
        file := std.fopen(p, "r")
        if file == null {
                error("!load")
        }
        std.fseek(file, 0, std.seekEnd)
        datasiz := std.ftell(file)
        std.fseek(file, 0, std.seekBegin)
        buffer := make([]uint8, datasiz)
        std.fread(file, buffer)
        data := ""
        
        for b in buffer {
                data += char(b)
        }
        
        return data
}
