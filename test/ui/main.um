import (
        "window.um"; "rect.um"
        "../../tophat.dat/d_ui.um"; "../../tophat.dat/d_font.um"
)

fn main() {
        window.setup("Ahoy", 640, 480)
        screen := rect.Rect{0, 0, 640, 480}
        d_ui.init(d_font.loadFont("data/font_mono.ttf", 16))

        for (window.cycle(screen)) {
                screen.w = window.w
                screen.h = window.h

                d_ui.begin()
                
                d_ui.setJoinWindows(true)
                d_ui.beginWindow("A", rect.Rect{40, 40, 200, 300})
                d_ui.beginWindow("B", rect.Rect{80, 80, 200, 300})
                d_ui.setJoinWindows(false)

                d_ui.setJoinWindows(true)
                d_ui.beginWindow("C", rect.Rect{120, 40, 200, 300})
                d_ui.beginWindow("D", rect.Rect{160, 80, 200, 300})
                d_ui.setJoinWindows(false)

                d_ui.setJoinWindows(true)
                d_ui.beginWindow("E", rect.Rect{160, 40, 200, 300})
                d_ui.beginWindow("F", rect.Rect{160, 80, 200, 300})
                d_ui.setJoinWindows(false)

                d_ui.end()
        }
}
